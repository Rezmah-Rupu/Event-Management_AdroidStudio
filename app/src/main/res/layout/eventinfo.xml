<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEB3B"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Event Information"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="4dp"
        >

    </TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="4dp"
        android:background="@color/white"
        android:stretchColumns="1"
        >

        <TableRow>
            <TextView
                android:text="Name"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/name_id"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="text"
                android:textColor="@color/black"
                >

            </EditText>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Place"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/place"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="text"
                android:textColor="@color/black"
                >

            </EditText>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Type"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                >

            </TextView>
            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rbindoor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Indoor"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    >

                </RadioButton>
                <RadioButton
                    android:id="@+id/rboutdoor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Outdoor"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    >

                </RadioButton>
                <RadioButton
                    android:id="@+id/rbonline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Online"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    >

                </RadioButton>

            </RadioGroup>

        </TableRow>

        <TableRow>

            <TextView
                android:text="Date &amp; Time"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/td"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="datetime"
                android:textColor="@color/black"
                >

            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Capacity"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/cap"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="number"
                android:textColor="@color/black"
                >

            </EditText>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Budget"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/bugdet"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="number"
                android:textColor="@color/black"
                >

            </EditText>

        </TableRow>

        <TableRow>
            <TextView
                android:text="Email"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/email"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="text"
                android:textColor="@color/black"
                >

            </EditText>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Phone"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/phone"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="number"
                android:textColor="@color/black"
                >

            </EditText>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Description"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/des"
                android:height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="text"
                android:textColor="@color/black"
                >

            </EditText>

        </TableRow>

        <TextView
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Error messages will be here"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:textAlignment="center"
            >

        </TextView>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        >

        <Button
            android:id="@+id/btnlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="EventList"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="4dp"
            android:backgroundTint="#C4FFC107"
            >

        </Button>
        <Button
            android:id="@+id/btnshare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Share"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="4dp"
            android:backgroundTint="#C4FFC107"
            >

        </Button>
        <Button
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"
            android:backgroundTint="#C4FFC107"

        >

    </Button>

    </LinearLayout>

</LinearLayout>