<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bfbfbf"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="#66b3ff"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Event Management"
            android:textSize="25sp"
            android:gravity="right"
            android:layout_marginRight="8dp"
            android:background="#03cafc"
            >
        </TextView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#e6e6ff"
            android:padding="8dp"
            >

        </ImageView>

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:background="#e6ffff"
        android:orientation="horizontal"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#737373"
            android:padding="8dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f2f2"
                android:layout_weight="1"
                ></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#737373"
                android:layout_margin="2dp"
                android:layout_weight="5"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#d1b3ff"
                    android:layout_margin="2dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#d1b3ff"
                    android:layout_margin="2dp"
                    >
                </TextView>


            </LinearLayout>

        </TableRow>

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Event Information"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            ></TextView>

    </TableLayout>

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#e6ffe6"
        android:layout_margin="8dp"
        android:text="Create/Login"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"

        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#1aa3ff"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sign up"
            android:textSize="15sp"
            android:backgroundTint="#3377ff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            ></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Login"
            android:textSize="15sp"
            android:backgroundTint="#3377ff"
            android:layout_marginRight="2dp"
            ></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Exit"
            android:textSize="15sp"
            android:backgroundTint="#3377ff"
            android:layout_marginRight="2dp"
            ></Button>

    </LinearLayout>

</LinearLayout>